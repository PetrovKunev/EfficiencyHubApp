@model IEnumerable<EfficiencyHub.Web.ViewModels.ProjectViewModel>

@{
    ViewData["Title"] = "Projects List";
}

<h1>Projects List</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@project.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@project.Role</td>
                <td>@(project.IsDeleted ? "Deleted" : "Active")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning btn-sm">Edit</a>
                    @if (!project.IsDeleted)
                    {
                        <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
