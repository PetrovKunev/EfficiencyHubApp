@model EfficiencyHub.Web.ViewModels.AssignmentViewModel

@{
    ViewData["Title"] = "Assignment Details";
}

<h2>Assignment Details</h2>

<div>
    <h4>@Model.Title</h4>
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Due Date</dt>
        <dd>@Model.DueDate.ToShortDateString()</dd>
        <dt>Status</dt>
        <dd>@Model.Status</dd>
    </dl>
</div>

<a asp-action="Index" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-secondary">Back to List</a>
