@model IEnumerable<EfficiencyHub.Web.ViewModels.ReminderViewModel>
@{
    ViewData["Title"] = "Reminders";
}

<h2>Reminders for: @ViewBag.AssignmentName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>Reminder Date</th>
            <th>Assignment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reminder in Model)
        {
            <tr>
                <td>@reminder.Message</td>
                <td>@reminder.ReminderDate.ToShortDateString()</td>
                <td>@reminder.AssignmentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@reminder.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@reminder.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this reminder?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="btn-group mt-3">
    <a asp-action="Create" asp-route-assignmentId="@ViewBag.AssignmentId" class="btn btn-primary me-2">Create New Reminder</a>
    <a asp-action="Index" asp-controller="Assignment" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-secondary">Back to Assignments</a>
</div>
