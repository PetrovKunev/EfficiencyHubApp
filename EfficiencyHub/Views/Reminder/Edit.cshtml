@model EfficiencyHub.Web.ViewModels.ReminderEditViewModel
@{
    ViewData["Title"] = "Edit Reminder";
}

<h2>Edit Reminder for: @ViewBag.AssignmentName</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Message"></label>
        <input asp-for="Message" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReminderDate"></label>
        <input asp-for="ReminderDate" class="form-control" type="datetime-local" />
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AssignmentId" />

    <div class="btn-group mt-3">
        <button type="submit" class="btn btn-primary me-2">Save Changes</button>
        <a asp-action="Index" asp-route-assignmentId="@Model.AssignmentId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
