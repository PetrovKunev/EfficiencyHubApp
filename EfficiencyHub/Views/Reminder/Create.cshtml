@model EfficiencyHub.Web.ViewModels.ReminderCreateViewModel
@{
    ViewData["Title"] = "Create Reminder";
}

<h2>Create Reminder</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="AssignmentId" />

    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReminderDate"></label>
        <input asp-for="ReminderDate" type="date" class="form-control" />
        <span asp-validation-for="ReminderDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Reminder</button>
    <a asp-action="Index" asp-route-assignmentId="@ViewBag.AssignmentId" class="btn btn-secondary">Cancel</a>
</form>
