@model EfficiencyHub.Web.ViewModels.ReminderCreateViewModel
@{
    ViewData["Title"] = "Create Reminder";
}

<h2>Create Reminder for: @ViewBag.AssignmentName</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AssignmentId" />

    <div class="form-group">
        <label asp-for="Message"></label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReminderDate"></label>
        <input asp-for="ReminderDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="ReminderDate" class="text-danger"></span>
    </div>

    <div class="d-flex mt-3">
    <button type="submit" class="btn btn-primary me-2">Create Reminder</button>
    <a asp-action="Index" asp-route-assignmentId="@ViewBag.AssignmentId" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}